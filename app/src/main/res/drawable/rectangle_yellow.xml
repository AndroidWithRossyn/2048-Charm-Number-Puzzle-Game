<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#EA8E15"
                android:centerColor="#C19342"
                android:endColor="#FDE1B0"
                android:angle="270"/>
            <corners android:radius="@dimen/_28sdp"/>
            <stroke android:color="@color/colorPrimary"
                android:width="@dimen/_1sdp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#CCFFCD74"
                android:centerColor="#CCFFCD74"
                android:endColor="#CCFDE1B0"
                android:angle="270"/>
            <corners android:radius="@dimen/_28sdp"/>
            <stroke android:color="#FFFFFF"
                android:width="@dimen/_1sdp"/>
        </shape>
    </item>

</selector>