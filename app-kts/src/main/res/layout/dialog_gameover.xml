<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="@dimen/_350sdp"
    android:background="@drawable/popup_background"
    android:padding="@dimen/_28sdp">

    <TextView
        android:id="@+id/game_over_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:layout_marginEnd="@dimen/_17sdp"
        android:layout_marginBottom="@dimen/_17sdp"
        android:gravity="center"
        android:text="@string/game_over_title"
        android:textAlignment="center"
        android:textSize="@dimen/_20sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_over_textview"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_rectangle_gray"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_7sdp"
            android:gravity="center"
            android:text="@string/your_score"
            android:textAlignment="center"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/game_over_score_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textSize="@dimen/_20sdp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_yellow"
        android:paddingHorizontal="@dimen/_35sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/play_again"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/mid_btn"/>


</RelativeLayout>