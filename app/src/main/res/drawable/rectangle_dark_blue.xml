<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#2160E1"
                android:centerColor="#459FC6"
                android:endColor="#C1E9FB"
                android:angle="270"/>
            <corners android:radius="@dimen/_28sdp"/>
            <stroke android:color="?colorSurface"
                android:width="@dimen/_1sdp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#CC80D8FF"
                android:centerColor="#CC80D8FF"
                android:endColor="#CCC1E9FB"
                android:angle="270"/>
            <corners android:radius="@dimen/_28sdp"/>
            <stroke android:color="#FFFFFF"
                android:width="@dimen/_1sdp"/>
        </shape>
    </item>

</selector>